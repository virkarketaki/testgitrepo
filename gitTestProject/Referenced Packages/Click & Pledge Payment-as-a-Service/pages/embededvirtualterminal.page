function checkvalue(){


      var acc=$(".acc").val();
      var appname= $(".appname").val();
       var versionnum= $(".versionnum").val();
        var idnumber= $(".idnumber").val();
        
      var pagename= $(".pagename").val();
       var visa1= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.Visa_card}').checked;
     var master= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.Master_card}').checked;
      var Discover= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.Discover}').checked;
      var AmericanEx= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.AmericanEx }').checked;
      var jcb= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.jcb}').checked;
      var eCheck= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.e_check}').checked;
      var InVoice= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.InVoice}').checked;
      var PurchaseOrder= document.getElementById('{!$Component.neweVTTransaction.block.SelectPayOptions.CreditCardItem.PurchaseOrder}').checked;
  
       var reg_appname =/^([a-zA-Z0-9\.\,\#\-\'\ ])+$/;
     var reg = /^([0-9])+$/;
       if(appname !="" && !reg_appname.test(appname)){
             alert("Please enter valid data in Application Name");
                      $(".appname").focus();
                      return false;
       }
      
       if(versionnum!="" && !reg_appname.test(versionnum)){
             alert("Please enter valid data in Version Number");
                      $(".versionnum").focus();
                      return false;
       }
       if(idnumber!="" && !reg_appname.test(idnumber)){
             alert("Please enter valid data in Identification Number");
                      $(".idnumber").focus();
                      return false;
       }
        if(pagename!="" && !reg_appname.test(pagename)){
             alert("Please enter valid data in Page Name");
                      $(".pagename").focus();
                      return false;
       }
       if(acc == ""){
            alert("Please Select C&P Account Number to process Payments");
              $(".acc").focus();
            return false;
        }
       if(acc!="" && reg.test(acc)==false)
       {
         
            alert("Please Enter Valid Account Number");
            $(".acc").focus();
            return false;
        }
       if(pagename == ""){
           alert("Please Enter a Value in Page Name");
              $(".pagename").focus();
            return false;
       }  
     if(visa1 == false && master == false && Discover == false && AmericanEx == false && eCheck == false && InVoice == false && PurchaseOrder == false && jcb == false){
          alert("Please select any one Payment Method ");
          return false;
      }
      

}
function imposeMaxLength(Event, Object, MaxLen){
  var e = window.event ? event.keyCode : Event.which;
  if((e==32) || (e==13) || (e > 47)){
      if(MaxLen && (Object.value.length > MaxLen-1))
       {
           
            Object.value = Object.value.substr(0,MaxLen);  
            if(window.event){
                 window.event.returnValue=null;
            }else{
               
                return false;
            }
       } 
  }
}
